<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="Holidays" class="com.sm.holiday.HolidayList"/>
    	
    	<bean id="holidayBean1" class="com.sm.holiday.Holiday">
        <property name="name" value="Lionel Messi"></property>
        <property name="fare" value="12000000f"></property>
        <property name="city" value="Barcelona"></property>
        <property name="country" value="Spain"></property>
        <property name="destination">
            <list>
                <value>Paris</value>
                <value>Ajax</value>
                <value>Monaco</value>
                <value>Madrid</value>
                <value>Rossario</value>
            </list>
        </property>
   		</bean>
   		
   		<bean id="holidayBean2" class="com.sm.holiday.Holiday">
        <property name="name" value="Christiano Ronaldo"></property>
        <property name="fare" value="120004700f"></property>
        <property name="city" value="Real Madrid"></property>
        <property name="country" value="Spain"></property>
        <property name="destination">
            <list>
                <value>Paris</value>
                <value>Ajax</value>
                <value>Monaco</value>
                <value>Madrid</value>
                <value>Rossario</value>
            </list>
        </property>
   		</bean>
   		
</beans>
